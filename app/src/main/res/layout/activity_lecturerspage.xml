<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mohammedalsamawi.fabe.lecturerspage"
    android:background="#000000"  >

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">


        <RadioGroup
            android:id="@+id/lectradgp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/aiadradio"
                android:onClick="lectpick"
                android:text="DR. YAHYA"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fdd700"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/hamedradio"
                android:onClick="lectpick"
                android:text="MR. HAMED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fdd700"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/qahtanradio"
                android:onClick="lectpick"
                android:text="MR. QAHTAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fdd700"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rezaradio"
                android:onClick="lectpick"
                android:text="DR. REZA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fdd700"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/sarahradio"
                android:onClick="lectpick"
                android:text="MS.SARAH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fdd700"
                android:textStyle="bold" />
        </RadioGroup>



        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/apic"
            android:layout_marginTop="100dp"
            android:id="@+id/aiadpic2"
            android:layout_gravity="center_horizontal"
            android:onClick="lectPage"/>
    </LinearLayout>

</RelativeLayout>